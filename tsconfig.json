{
  /* configuration for ts-node
  allows ts-node to access the modules in the  
  globals.d.ts declaration file */
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "target": "es5",
    "downlevelIteration": true,
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    
    // "allowImportingTsExtensions": 
    // "allowImportingTsExtensions": true
  },
  "include": ["./src/**/*"]
}